---
interface Props {
  title: string;
  description?: string;
  client?: string;
  category: string;
  image: string;
  tags?: string[];
  slug: string;
}

const { title, description, client, category, image, tags, slug } = Astro.props;
---

<a href={`/portfolio/${slug}`} class="portfolio-card">
  <img src={image} alt={title} loading="lazy" />
  <div class="portfolio-card-content">
    <div class="category">{category}</div>
    <h3>{title}</h3>
    {description && <p class="description">{description}</p>}
    {client && <div class="client">Client: {client}</div>}
    {tags && tags.length > 0 && (
      <div class="tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>

<style>
  @import '../styles/portfolio.css';
</style> 