---

<BaseLayout title="Pricing - BlueRoad">
  <!-- Hero Section -->
  <section class="py-20 bg-[#111111]">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-8">Our Pricing</h1>
        <p class="text-xl text-gray-400 mb-12">
          Transparent pricing for all your digital needs. Choose the package that best fits your project.
        </p>
      </div>
    </div>
  </section>

  <!-- Pricing Sections -->
  <section class="py-20 bg-[#1A1A1A]">
    <div class="container">
      <!-- Web Development -->
      <div class="mb-20">
        <h2 class="text-3xl font-bold text-center mb-12">Web Development</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {webDevPricing.map((plan) => (
            <div class="bg-[#111111] p-8 rounded-2xl border border-gray-800">
              <h3 class="text-2xl font-bold mb-4">{plan.title}</h3>
              <div class="mb-6">
                <span class="text-4xl font-bold text-[#3B82F6]">{plan.price}</span>
                <span class="text-gray-400">{plan.unit}</span>
              </div>
              <ul class="space-y-4 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-center text-gray-400">
                    <svg class="w-5 h-5 text-[#3B82F6] mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a
                href="/contact"
                class="block w-full py-3 px-6 text-center rounded-lg bg-[#3B82F6] text-white font-semibold hover:bg-[#2563EB] transition-colors"
              >
                Get Started
              </a>
            </div>
          ))}
        </div>
      </div>

      <!-- Design Services -->
      <div class="mb-20">
        <h2 class="text-3xl font-bold text-center mb-12">Design Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
          {designPricing.map((plan) => (
            <div class="bg-[#111111] p-8 rounded-2xl border border-gray-800">
              <h3 class="text-2xl font-bold mb-4">{plan.title}</h3>
              <div class="mb-6">
                <span class="text-4xl font-bold text-[#3B82F6]">{plan.price}</span>
                <span class="text-gray-400">{plan.unit}</span>
              </div>
              <ul class="space-y-4 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-center text-gray-400">
                    <svg class="w-5 h-5 text-[#3B82F6] mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a
                href="/contact"
                class="block w-full py-3 px-6 text-center rounded-lg bg-[#3B82F6] text-white font-semibold hover:bg-[#2563EB] transition-colors"
              >
                Get Started
              </a>
            </div>
          ))}
        </div>
      </div>

      <!-- Additional Services -->
      <div class="mt-20">
        <h2 class="text-3xl font-bold text-center mb-12">Additional Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
          <div class="bg-[#111111] p-8 rounded-2xl border border-gray-800">
            <h3 class="text-2xl font-bold mb-6">Rush Delivery</h3>
            <ul class="space-y-4">
              <li class="text-gray-400">3-day delivery: +50% per item</li>
              <li class="text-gray-400">24h delivery: +100% per item</li>
              <li class="text-[#3B82F6]">Rush orders: 100% prepayment</li>
            </ul>
          </div>
          <div class="bg-[#111111] p-8 rounded-2xl border border-gray-800">
            <h3 class="text-2xl font-bold mb-6">Volume Discounts</h3>
            <ul class="space-y-4">
              <li class="text-gray-400">5+ items: 15% off</li>
              <li class="text-gray-400">10+ items: 25% off</li>
              <li class="text-gray-400">20+ items: Custom quote</li>
            </ul>
          </div>
          <div class="bg-[#111111] p-8 rounded-2xl border border-gray-800">
            <h3 class="text-2xl font-bold mb-6">Payment Terms</h3>
            <ul class="space-y-4">
              <li class="text-gray-400">Standard: 50% advance</li>
              <li class="text-gray-400">Rush orders: 100% prepayment</li>
              <li class="text-gray-400">Finnish B2B: 14-day terms</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-[#111111]">
